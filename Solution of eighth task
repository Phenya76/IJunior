public static void Main(string[] args)
        {
            int minute;
            int grannys;
            int expactationTimeMinute;
            int expactationTimeHour;
            int visitTimes = 10;
            int minutesInHour = 60;

            Console.WriteLine("Сколько старушек перед тобой в очереди?");
            grannys = int.Parse(Console.ReadLine());
            minute = visitTimes * grannys;
            expactationTimeHour = minute / minutesInHour;
            expactationTimeMinute = minute % minutesInHour;
            Console.WriteLine("Вы должны отстоять в очереди " + expactationTimeHour + " ч. " + expactationTimeMinute + " мин.");
            Console.ReadLine();
        }
