public static void Main(string[] args)
        {
            double crystalCoust = 84.7;
            Console.WriteLine("Сколько золота у вас есть?");
            double gold = double.Parse(Console.ReadLine()) % crystalCoust;
            Console.WriteLine("Сколько кристаллов вы хотите купить по " + crystalCoust + "?");
            int purechasedCrystalls = int.Parse(Console.ReadLine());
            Console.WriteLine("Остаток золота " + Math.Round(gold, 2) + "\nОстаток кристаллов " + purechasedCrystalls);
            Console.ReadLine();
        }
